<% if !@user.has_preferences? %>
  <%= erb "www/preferencias/preferencias_form.html".to_sym %>
<% else %>
    <div class="default-container preferences-edit" id="preferences-edit">
      <h2>Preferências | Editar</h2>
      <div class="row">
        <div class="col-lg-12">
          <div class="col-lg-4 text-center" id="paises">
            <h3>PAÍSES</h3>
            <% @user.pais.each do |pais| %>
              <p><%= pais.nome %></p>
            <% end %>
          </div>
          <div class="col-lg-4 text-center" id="hipodromos">
            <h3>HIPÓDROMOS</h3>
            <% @user.hipodromo.each do |hip| %>
              <p><%= hip.nome %></p>
            <% end %>
          </div>
          <div class="col-lg-4 text-center" id="canais">
            <h3>CANAIS DE ATENDIMENTO</h3>
            <% @user.canal_atendimento.each do |canal_atendimento| %>
              <p><%= canal_atendimento.nome %></p>
            <% end %>
          </div>
        </div>
        <div class="col-lg-12 text-center edit">
          <form action="/preferencias_edit">
            <button type="submit" class="btn btn-default edit">Editar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
<% end %>