<!-- modal Countries-->
<div class="modal fade" id="modalCountries" tabindex="-1" role="dialog" aria-labelledby="modalCountries" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Pa√≠ses/Countries</h4>
      </div>
      <div class="modal-body">
        <div class="col-sm-12">
          <% Pais.all.sort_by {|item| item.nome}.each do |pais| %>
            <div class="col-sm-3">
              <input type="checkbox" class="restriction_input countries" name="pai_ids[]" value="<%= pais.id %>" <%= "checked" if @campanha.pai_ids.include? pais.id if @method == 'patch' %> >
                <%= pais.nome %>
            </div>
          <% end %>
        </div>
      </div>
     <div class="modal-footer">
        <button id="confirmar-apostas-quantia" type="button" class="btn btn-default" data-dismiss="modal">Salvar</button>
      </div>
    </div>
  </div>
</div>